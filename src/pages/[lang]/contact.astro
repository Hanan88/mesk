---
import Layout from "../../layouts/Layout.astro";
import ar from "../../locales/ar.json";
import en from "../../locales/en.json";

export function getStaticPaths() {
  return [
    { params: { lang: "ar" } },
    { params: { lang: "en" } }
  ];
}

const { lang = "ar" } = Astro.params;
const t = lang === "en" ? en : ar;
---

<Layout title={`${t.menu.contact} | ${t.siteName}`} lang={lang}>
  <section class="py-16 container mx-auto px-6">
    <h1 class="text-4xl font-bold text-blue-900 mb-6 text-center">{t.contact.title}</h1>
    
    <p class="text-lg text-gray-700 leading-relaxed max-w-3xl mx-auto text-center mb-12">
      {t.contact.subtitle}
    </p>

    <!-- Contact Info + Form -->
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div class="space-y-6">
        <h2 class="text-2xl font-bold text-blue-900 mb-4">{t.contact.contactInfo}</h2>
        <p class="text-gray-700">
          📍 {t.contact.address}: القاهرة الجديدة، مصر  
        </p>
        <p class="text-gray-700">
          ☎️ {t.contact.phone}: <a href="tel:+201234567890" class="text-blue-900 font-semibold hover:underline">+20 123 456 7890</a>
        </p>
        <p class="text-gray-700">
          💬 {t.contact.whatsapp}: <a href="https://wa.me/201234567890" class="text-green-600 font-semibold hover:underline">+20 123 456 7890</a>
        </p>
        <p class="text-gray-700">
          📧 {t.contact.email}: <a href="mailto:info@masc.com" class="text-blue-900 font-semibold hover:underline">info@masc.com</a>
        </p>
        
        <!-- Working Hours Section -->
        <div class="mt-8">
          <h3 class="text-xl font-bold text-blue-900 mb-3">🕒 {t.contact.workingHours}</h3>
          <p class="text-gray-700 mb-3">{t.contact.workingHoursDesc}</p>
          <div class="space-y-2 text-gray-700">
            <p class="flex items-center">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
              {t.contact.weekdays}
            </p>
            <p class="flex items-center">
              <span class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></span>
              {t.contact.saturday}
            </p>
            <p class="flex items-center">
              <span class="w-2 h-2 bg-red-500 rounded-full mr-3"></span>
              {t.contact.friday}
            </p>
          </div>
        </div>
        
        <!-- Social Media Section -->
        <div class="mt-8">
          <h3 class="text-xl font-bold text-blue-900 mb-3">📱 {t.contact.socialMedia}</h3>
          <p class="text-gray-700 mb-4">{t.contact.followUs}</p>
          <div class="flex space-x-4">
            <a href="https://facebook.com/meskpools" target="_blank" rel="noopener noreferrer" 
               class="flex items-center justify-center w-12 h-12 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="https://instagram.com/meskpools" target="_blank" rel="noopener noreferrer" 
               class="flex items-center justify-center w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg hover:from-purple-600 hover:to-pink-600 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.83-9.281H7.83v6.281h8.449V7.707zm-4.225 1.297c-.72 0-1.297-.577-1.297-1.297s.577-1.297 1.297-1.297 1.297.577 1.297 1.297-.577 1.297-1.297 1.297z"/>
              </svg>
            </a>
            <a href="https://twitter.com/meskpools" target="_blank" rel="noopener noreferrer" 
               class="flex items-center justify-center w-12 h-12 bg-blue-400 text-white rounded-lg hover:bg-blue-500 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
            <a href="https://youtube.com/@meskpools" target="_blank" rel="noopener noreferrer" 
               class="flex items-center justify-center w-12 h-12 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
            <a href="https://linkedin.com/company/meskpools" target="_blank" rel="noopener noreferrer" 
               class="flex items-center justify-center w-12 h-12 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <h2 class="text-2xl font-bold text-blue-900 mb-4">{t.contact.sendMessage}</h2>
        <form action="#" method="POST" class="space-y-4">
          <div>
            <label for="name" class="block text-gray-700 mb-1">{t.contact.name}</label>
            <input type="text" id="name" name="name" required class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
          </div>
          <div>
            <label for="email" class="block text-gray-700 mb-1">{t.contact.email}</label>
            <input type="email" id="email" name="email" required class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
          </div>
          <div>
            <label for="message" class="block text-gray-700 mb-1">{t.contact.message}</label>
            <textarea id="message" name="message" rows="4" required class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500"></textarea>
          </div>
          <button type="submit" class="bg-blue-900 text-white px-6 py-2 rounded-lg hover:bg-blue-800">
            {t.contact.send}
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Google Map -->
  <section class="py-12">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl font-bold text-blue-900 mb-6 text-center">{t.contact.mapTitle}</h2>
      <div class="w-full h-96 rounded-lg overflow-hidden shadow">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3450.3728477994287!2d31.4426!3d30.0285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x145838b3f6a7f4a9%3A0x2e4d77e94f3fa98d!2sNew%20Cairo!5e0!3m2!1sen!2seg!4v1694460000000!5m2!1sen!2seg"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    </div>
  </section>
</Layout>
