---
import Layout from "../../layouts/Layout.astro";
import ar from "../../locales/ar.json";
import en from "../../locales/en.json";

export function getStaticPaths() {
  return [
    { params: { lang: "ar" } },
    { params: { lang: "en" } }
  ];
}

const { lang = "ar" } = Astro.params;
const t = lang === "en" ? en : ar;
---

<Layout title={`${t.menu.about} | ${t.siteName}`} lang={lang}>
  <!-- Intro -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-4xl font-bold text-blue-900 mb-6">{t.about.title}</h1>
      <p class="text-lg text-gray-600 leading-relaxed max-w-3xl mx-auto">
        {t.about.text}
      </p>
    </div>
  </section>

  <!-- Video Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
      
      <!-- النصوص جنب الفيديو -->
      <div>
        <h2 class="text-2xl font-bold text-blue-900 mb-4">{t.about.videoTitle}</h2>
        <p class="text-gray-700 leading-relaxed mb-6">{t.about.videoText}</p>

        <ul class="space-y-3 text-gray-700">
          <li class="flex items-center gap-2">
            <span class="text-blue-600 text-lg">✔</span>
            {t.about.point1}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-blue-600 text-lg">✔</span>
            {t.about.point2}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-blue-600 text-lg">✔</span>
            {t.about.point3}
          </li>
        </ul>
      </div>

      <!-- الفيديو صغير -->
      <div class="relative w-full h-64 md:h-80 rounded-lg overflow-hidden shadow-lg">
        <video 
          src="/videos/about-us.mp4" 
          autoplay 
          muted 
          loop 
          playsinline 
          poster="/images/about-pool.jpg"
          class="w-full h-full object-cover"
        ></video>
      </div>
    </div>
  </section>



  <!-- Vision & Mission -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-start">
      <div>
        <h2 class="text-2xl font-bold text-blue-900 mb-4">{t.about.vision}</h2>
        <p class="text-gray-700 leading-relaxed mb-8">{t.about.visionText}</p>
        <h2 class="text-2xl font-bold text-blue-900 mb-4">{t.about.mission}</h2>
        <p class="text-gray-700 leading-relaxed">{t.about.missionText}</p>
      </div>
      <div class="grid grid-cols-2 gap-6">
        <div class="bg-white p-6 rounded-xl shadow text-center">
          <h3 class="text-xl font-semibold text-blue-900 mb-2">15+</h3>
          <p class="text-gray-600">سنوات خبرة</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow text-center">
          <h3 class="text-xl font-semibold text-blue-900 mb-2">200+</h3>
          <p class="text-gray-600">مشروع مكتمل</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow text-center">
          <h3 class="text-xl font-semibold text-blue-900 mb-2">50+</h3>
          <p class="text-gray-600">فريق عمل</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow text-center">
          <h3 class="text-xl font-semibold text-blue-900 mb-2">100%</h3>
          <p class="text-gray-600">رضا العملاء</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
